{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    // --- Alias resolution
    "baseUrl": ".",
    "paths": {
      // Configuration to resolve project `@` relative imports
      "@/*": ["src/*"]
    }
  },
  "include": ["cypress/**/*", "src/**/*"]
}
